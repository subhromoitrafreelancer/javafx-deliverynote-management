<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="768.0" prefWidth="1024.0" stylesheets="@css/style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.aarsoma.deliverynote.controller.DashboardController">
    <top>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <MenuBar fx:id="menuBar">
                    <menus>
                        <Menu mnemonicParsing="false" text="Customers">
                            <items>
                                <MenuItem fx:id="customerMenuItem" mnemonicParsing="false" onAction="#handleCustomerMenuItem" text="Manage Customers" />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Delivery Challan">
                            <items>
                                <MenuItem fx:id="deliveryChallanMenuItem" mnemonicParsing="false" onAction="#handleDeliveryChallanMenuItem" text="Create New" />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Delivery History">
                            <items>
                                <MenuItem fx:id="deliveryHistoryMenuItem" mnemonicParsing="false" onAction="#handleDeliveryHistoryMenuItem" text="View History" />
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
                <HBox alignment="CENTER_RIGHT" spacing="10.0" styleClass="header-bar">
                    <children>
                        <Label fx:id="dateTimeLabel" styleClass="date-time-label" text="2025-05-07 12:00:00">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </HBox>
            </children>
        </VBox>
    </top>
    <center>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="30.0" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="financialYearLabel" styleClass="financial-year-label" text="Financial Year: 2024-2025">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <Label styleClass="section-header" text="DELIVERY NOTES STATISTICS">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
                <GridPane alignment="CENTER" hgap="20.0" vgap="20.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="150.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="150.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <VBox alignment="CENTER" styleClass="stat-card">
                            <children>
                                <Label styleClass="stat-header" text="Total Delivery Notes">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                </Label>
                                <Label fx:id="totalDeliveryNotesLabel" styleClass="stat-value" text="0">
                                    <font>
                                        <Font size="36.0" />
                                    </font>
                                </Label>
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </VBox>
                        <VBox alignment="CENTER" styleClass="stat-card" GridPane.columnIndex="1">
                            <children>
                                <Label styleClass="stat-header" text="Financial Year">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                </Label>
                                <Label fx:id="fyDeliveryNotesLabel" styleClass="stat-value" text="0">
                                    <font>
                                        <Font size="36.0" />
                                    </font>
                                </Label>
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </VBox>
                        <VBox alignment="CENTER" styleClass="stat-card" GridPane.columnIndex="2">
                            <children>
                                <Label styleClass="stat-header" text="Current Month">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                </Label>
                                <Label fx:id="monthlyDeliveryNotesLabel" styleClass="stat-value" text="0">
                                    <font>
                                        <Font size="36.0" />
                                    </font>
                                </Label>
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </VBox>
                        <VBox alignment="CENTER" styleClass="stat-card" GridPane.rowIndex="1">
                            <children>
                                <Label styleClass="stat-header" text="Current Week">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                </Label>
                                <Label fx:id="weeklyDeliveryNotesLabel" styleClass="stat-value" text="0">
                                    <font>
                                        <Font size="36.0" />
                                    </font>
                                </Label>
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </VBox>
                        <VBox alignment="CENTER" styleClass="stat-card" GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <children>
                                <Label styleClass="stat-header" text="Current Day">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                </Label>
                                <Label fx:id="dailyDeliveryNotesLabel" styleClass="stat-value" text="0">
                                    <font>
                                        <Font size="36.0" />
                                    </font>
                                </Label>
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </VBox>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </GridPane>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </center>
</BorderPane>
