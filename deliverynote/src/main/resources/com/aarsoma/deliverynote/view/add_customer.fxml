<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="500.0" stylesheets="@css/style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.aarsoma.deliverynote.controller.CustomerController">
    <top>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <Label styleClass="page-title" text="Add New Customer">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
                </Label>
            </children>
        </VBox>
    </top>
    <center>
        <VBox spacing="15.0" BorderPane.alignment="CENTER">
            <children>
                <VBox spacing="5.0">
                    <children>
                        <Label text="Name *">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Label>
                        <TextField fx:id="nameField" />
                    </children>
                </VBox>
                <VBox spacing="5.0">
                    <children>
                        <Label text="Address">
                            <font>
                                <Font size="12.0" />
                            </font>
                        </Label>
                        <TextField fx:id="addressField" />
                    </children>
                </VBox>
                <VBox spacing="5.0">
                    <children>
                        <Label text="Contact Person">
                            <font>
                                <Font size="12.0" />
                            </font>
                        </Label>
                        <TextField fx:id="contactPersonField" />
                    </children>
                </VBox>
                <VBox spacing="5.0">
                    <children>
                        <Label text="Phone">
                            <font>
                                <Font size="12.0" />
                            </font>
                        </Label>
                        <TextField fx:id="phoneField" />
                    </children>
                </VBox>
                <VBox spacing="5.0">
                    <children>
                        <Label text="Email">
                            <font>
                                <Font size="12.0" />
                            </font>
                        </Label>
                        <TextField fx:id="emailField" />
                    </children>
                </VBox>
                <Label text="* Required fields" textFill="#757575">
                    <font>
                        <Font size="11.0" />
                    </font>
                </Label>
            </children>
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
            </padding>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="clearButton" mnemonicParsing="false" onAction="#handleClearButton" styleClass="secondary-button" text="Clear" />
                <Button fx:id="saveButton" defaultButton="true" mnemonicParsing="false" onAction="#handleSaveButton" styleClass="primary-button" text="Save" />
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>
